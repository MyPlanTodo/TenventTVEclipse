<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/image_src"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/mainview_cloudlist" />

    <TextView
        android:id="@+id/text_vipact_tit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center|left"
        android:text="月月秒大奖，周周抽好礼！"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/image_src"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_vipact_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/image_src"
        android:gravity="center|left"
        android:text="开通连续包月会员即有机会获得洗颜专科洗面奶，还有iPad、音箱大奖等你来！"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>