<?xml version="1.0" encoding="utf-8"?>
<!-- GridView TV版本:为了看清楚放大的效果，故意加了一个矩形 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/mainview_cloudlist" />

    <TextView
        android:id="@+id/text_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="1:50:00"
        android:textColor="#FF0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_vtit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:gravity="center|left"
        android:text="戴拿奥特曼_39"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_vtit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        android:text="观看不足1分钟"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>